<Window x:Class="GalaxyZooTouchTable.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GalaxyZooTouchTable"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920">
    <local:DragCanvas x:Name="RootCanvas" Background="Black">
        <Grid Height="1050" Width="1920">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <local:UserConsole Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" VerticalContentAlignment="Bottom">
                <UserControl.LayoutTransform>
                    <RotateTransform CenterX="0.5" CenterY="0.5" Angle="180"/>
                </UserControl.LayoutTransform>
            </local:UserConsole>
            <local:UserConsole Grid.Column="2" Grid.Row="0" HorizontalAlignment="Right" VerticalContentAlignment="Bottom">
                <UserControl.LayoutTransform>
                    <RotateTransform CenterX="0.5" CenterY="0.5" Angle="180"/>
                </UserControl.LayoutTransform>
            </local:UserConsole>
            <local:UserConsole Grid.Column="0" Grid.Row="1" VerticalContentAlignment="Bottom">
                <UserControl.LayoutTransform>
                    <RotateTransform CenterX="0.5" CenterY="0.5" Angle="90"/>
                </UserControl.LayoutTransform>
            </local:UserConsole>
            <local:UserConsole Grid.Column="3" Grid.Row="1" VerticalContentAlignment="Bottom">
                <UserControl.LayoutTransform>
                    <RotateTransform CenterX="0.5" CenterY="0.5" Angle="-90"/>
                </UserControl.LayoutTransform>
            </local:UserConsole>
            <local:UserConsole Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" VerticalContentAlignment="Bottom"/>
            <local:UserConsole Grid.Column="2" Grid.Row="3" HorizontalAlignment="Right" VerticalContentAlignment="Bottom"/> 
        </Grid>
    </local:DragCanvas>
</Window>
