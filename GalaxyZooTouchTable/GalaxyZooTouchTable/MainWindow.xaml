<Window x:Class="GalaxyZooTouchTable.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GalaxyZooTouchTable"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920">

    <local:DragCanvas x:Name="RootCanvas" Background="Black">
        <Grid Height="1050" Width="1920">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="404*" />
                <ColumnDefinition Width="556*" />
                <ColumnDefinition Width="539*" />
                <ColumnDefinition Width="421*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <local:UserConsole x:Name="HeartUser" Style="{StaticResource HeartUser}" DataContext="{Binding Path=userVm}" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" VerticalContentAlignment="Bottom" Width="480">
                <UserControl.LayoutTransform>
                    <RotateTransform CenterX="0.5" CenterY="0.5" Angle="180"/>
                </UserControl.LayoutTransform>
            </local:UserConsole>
            <local:UserConsole x:Name="StarUser" Style="{StaticResource StarUser}" Grid.Column="2" Grid.Row="0" HorizontalAlignment="Right" VerticalContentAlignment="Bottom" Width="485">
                <UserControl.LayoutTransform>
                    <RotateTransform CenterX="0.5" CenterY="0.5" Angle="180"/>
                </UserControl.LayoutTransform>
            </local:UserConsole>
            <local:UserConsole x:Name="EarthUser" Style="{StaticResource EarthUser}" ClipToBounds="False" Grid.RowSpan="3" Grid.Column="0" Grid.Row="0" VerticalContentAlignment="Bottom">
                <UserControl.LayoutTransform>
                    <RotateTransform CenterX="0.5" CenterY="0.5" Angle="90"/>
                </UserControl.LayoutTransform>
            </local:UserConsole>
            <local:UserConsole x:Name="LightUser" Style="{StaticResource LightUser}" Grid.Column="3" Grid.RowSpan="3" Grid.Row="0" VerticalContentAlignment="Bottom">
                <UserControl.LayoutTransform>
                    <RotateTransform CenterX="0.5" CenterY="0.5" Angle="-90"/>
                </UserControl.LayoutTransform>
            </local:UserConsole>
            <local:UserConsole x:Name="PersonUser" Style="{StaticResource PersonUser}" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" VerticalContentAlignment="Bottom" Width="480"/>
            <local:UserConsole x:Name="FaceUser" Style="{StaticResource FaceUser}" Grid.Column="2" Grid.Row="2" HorizontalAlignment="Right" VerticalContentAlignment="Bottom" Width="485"/>
        </Grid>
    </local:DragCanvas>
</Window>
