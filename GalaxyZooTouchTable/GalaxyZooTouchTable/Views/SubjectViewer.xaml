<UserControl x:Class="GalaxyZooTouchTable.SubjectViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GalaxyZooTouchTable"
             mc:Ignorable="d" 
             d:DesignHeight="211" d:DesignWidth="287">
    <Grid Background="{StaticResource DarkGrayColor}" Height="211" Width="287">
        <TextBlock FontSize="19" Text="Help scientists classify galaxies." Foreground="White" FontFamily="/GalaxyZooTouchTable;component/Fonts/#Karla" FontWeight="Bold"/>
        <TextBlock FontSize="9" Margin="0,23,0,0" Text="Please consider only the object in the center of the image." Foreground="White" FontFamily="/GalaxyZooTouchTable;component/Fonts/#Karla" FontWeight="Bold"/>

        <Border
            BorderBrush="White"
            BorderThickness="2"
            Width="122"
            Height="122"
            Margin="0,45,0,0" 
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            CornerRadius="2.85">

            <Image Height="120" Width="120" Source="{Binding SubjectImageSource, Converter={StaticResource NullImageConverter}}"/>
        </Border>

        <ListView
            Background="Transparent"
            BorderBrush="Transparent"
            ItemsSource="{Binding CurrentAnswers}"
            SelectedItem="{Binding SelectedItem}"
            Width="148"
            Height="136"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled" Margin="0,44,0,0">
            <ListView.ItemContainerStyle>
                <Style TargetType="{x:Type ListViewItem}">
                    <Setter Property="Margin" Value="0,0,0,9"/>

                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <Grid Height="34">
                                    <Border x:Name="Bg" CornerRadius="3" Background="{TemplateBinding Background}">
                                        <Border Background="#E5FF4D" CornerRadius="3,0,0,3" Width="35" HorizontalAlignment="Left">
                                            <Image Margin="6.5" Source="{Binding Url}" StretchDirection="Both"/>
                                        </Border>
                                    </Border>
                                    <StackPanel VerticalAlignment="Center" Margin="43,0,0,0">
                                        <TextBlock Foreground="White" Text="{Binding Label}" FontWeight="Bold" FontFamily="/GalaxyZooTouchTable;component/Fonts/#Karla" FontSize="10"/>
                                        <TextBlock Foreground="White" Text="{Binding SubLabel}" FontStyle="Italic" FontFamily="/GalaxyZooTouchTable;component/Fonts/#Karla" FontSize="6" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter Property="Background" Value="#55565A" TargetName="Bg"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#015F7B" TargetName="Bg"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>

        <Border Height="31" Width="287" CornerRadius="3" Background="Black" VerticalAlignment="Bottom"/>
    </Grid>
</UserControl>
