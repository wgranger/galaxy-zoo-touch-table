<UserControl x:Class="GalaxyZooTouchTable.SubjectViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             mc:Ignorable="d" 
             d:DesignHeight="241" d:DesignWidth="287">
    <UserControl.Resources>
        <Style x:Key="CommonBoldFont" TargetType="{x:Type TextBlock}">
            <Setter Property="FontFamily" Value="/GalaxyZooTouchTable;component/Fonts/#Karla"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </UserControl.Resources>
    
    <Grid Background="{StaticResource DarkGrayColor}" Height="241" Width="287">
        <TextBlock Style="{StaticResource CommonBoldFont}" FontSize="19" Text="Help scientists classify galaxies."/>
        <TextBlock Style="{StaticResource CommonBoldFont}" FontSize="9" Margin="0,23,0,0" Text="Please consider only the object in the center of the image."/>

        <Border
            BorderBrush="White"
            BorderThickness="2"
            CornerRadius="2.85"
            Height="122"
            HorizontalAlignment="Left"
            Margin="0,45,0,0" 
            VerticalAlignment="Top"
            Width="122">

            <Image Height="120" Width="120" Source="{Binding SubjectImageSource, Converter={StaticResource NullImageConverter}}"/>
        </Border>

        <ListView
            Background="Transparent"
            BorderBrush="Transparent"
            Height="136"
            HorizontalAlignment="Right"
            ItemsSource="{Binding CurrentAnswers}"
            Margin="0,44,0,0"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            SelectedItem="{Binding SelectedItem}"
            VerticalAlignment="Top"
            Width="148">

            <ListView.ItemContainerStyle>
                <Style TargetType="{x:Type ListViewItem}">
                    <Setter Property="Margin" Value="0,0,0,9"/>

                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <Grid Height="34">
                                    <Border x:Name="Bg" Background="{TemplateBinding Background}" CornerRadius="3">
                                        <Border Background="#E5FF4D" CornerRadius="3,0,0,3" Width="35" HorizontalAlignment="Left">
                                            <Image Margin="6.5" Source="{Binding Url}" StretchDirection="Both"/>
                                        </Border>
                                    </Border>
                                    <StackPanel VerticalAlignment="Center" Margin="43,0,0,0">
                                        <TextBlock Style="{StaticResource CommonBoldFont}" Text="{Binding Label}" FontSize="10"/>
                                        <TextBlock Foreground="White" Text="{Binding SubLabel}" FontStyle="Italic" FontFamily="/GalaxyZooTouchTable;component/Fonts/#Karla" FontSize="6" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter Property="Background" Value="#55565A" TargetName="Bg"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#015F7B" TargetName="Bg"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>

        <Border
            Background="Black"
            CornerRadius="3"
            Height="31"
            Margin="0,0,0,30"
            VerticalAlignment="Bottom"
            Width="287"/>

        <Button
            x:Name="SubmitButton"
            Style="{StaticResource SuccessBtn}"
            Command="{Binding ContinueClassification}"
            Foreground="Black"
            Height="23"
            VerticalAlignment="Bottom"
            Width="285">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchUp">
                    <i:InvokeCommandAction Command="{Binding ContinueClassification}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock
                    FontFamily="/GalaxyZooTouchTable;component/Fonts/#Karla"
                    FontWeight="Bold"
                    Text="Submit Classification"/>
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
