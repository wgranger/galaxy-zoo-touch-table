<UserControl x:Class="GalaxyZooTouchTable.ClassificationPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GalaxyZooTouchTable"
             xmlns:Views="clr-namespace:GalaxyZooTouchTable.Views"
             xmlns:fa="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
             mc:Ignorable="d" 
             d:DesignWidth="558"
             d:DesignHeight="366"
             Height="{Binding Source={x:Static SystemParameters.PrimaryScreenHeight}, Converter={StaticResource PercentSizeConverter}, ConverterParameter='0.338'}"
             Width="{Binding Source={x:Static SystemParameters.PrimaryScreenHeight}, Converter={StaticResource PercentSizeConverter}, ConverterParameter='0.516'}">
    <UserControl.Resources>
        <DataTemplate x:Key="SubjectViewerTemplate">
            <local:SubjectViewer/>
        </DataTemplate>
        <DataTemplate x:Key="ClassificationSummaryTemplate">
            <local:ClassificationSummary/>
        </DataTemplate>

        <Style x:Key="ContinueChevron" TargetType="{x:Type fa:ImageAwesome}">
            <Setter Property="Visibility" Value="Collapsed"/>

            <Style.Triggers>
                <DataTrigger Binding="{Binding CurrentView}" Value="1">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="54*"/>
            <ColumnDefinition Width="23*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Panel.ZIndex="-1">
            <Grid.RowDefinitions>
                <RowDefinition Height="120*"/>
                <RowDefinition Height="100*"/>
                <RowDefinition Height="165*"/>
            </Grid.RowDefinitions>

            <Views:Leveler Grid.Row="1" DataContext="{Binding LevelerViewModel}"/>

            <!--October 2018: The notification bell design is pending-->
            <!--<Button
                Grid.Column="1"
                Grid.Row="2"
                Margin="0,5"
                Style="{StaticResource BellBtn}"
                Background="{Binding DataContext.ThemeColor, RelativeSource={RelativeSource AncestorType=local:UserConsole}}"
                VerticalAlignment="Top"
                HorizontalAlignment="Right">

                <fa:ImageAwesome Icon="BellOutline" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="3"/>
            </Button>-->
        </Grid>

        <Grid Grid.Column="1" Panel.ZIndex="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="7*"/>
            </Grid.RowDefinitions>
            <Image Grid.Row="0" Source="{Binding User.Avatar}" VerticalAlignment="Top" />
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="15*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Border
                Grid.Row="1"
                CornerRadius="5"
                BorderBrush="#343438"
                BorderThickness="1">

                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="0"/>
                </Border.Effect>

                <Grid Background="{StaticResource DarkGrayColor}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="20*"/>
                        <RowDefinition Height="6*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.ColumnSpan="3" Grid.RowSpan="5" Panel.ZIndex="1" Visibility="{Binding CloseConfirmationVisible, Converter={StaticResource BoolToVis}, FallbackValue=Hidden}">
                        <Grid.Background>
                            <SolidColorBrush Color="#343438" Opacity="0.8"/>
                        </Grid.Background>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="5*"/>
                            <RowDefinition Height="2*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <local:CloseConfirmation Grid.Row="1" Grid.Column="1"/>
                    </Grid>

                    <Grid Grid.Row="1" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        
                        <Button Style="{StaticResource StandardBtn}" Grid.Column="1" BorderThickness="0" Foreground="White" Background="Transparent" VerticalAlignment="Center" Command="{Binding ShowCloseConfirmation}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40*"/>
                                    <ColumnDefinition Width="4*"/>
                                    <ColumnDefinition Width="5*"/>
                                </Grid.ColumnDefinitions>
                                <Viewbox>
                                    <TextBlock VerticalAlignment="Center" Text="Close workspace" FontFamily="/GalaxyZooTouchTable;component/Fonts/#Karla"/>
                                </Viewbox>
                                <fa:ImageAwesome Grid.Column="2" Icon="Times" Foreground="White"/>
                            </Grid>
                        </Button>

                        <Separator Background="{StaticResource MedGrayColor}" Grid.Row="1" Grid.ColumnSpan="2"/>
                    </Grid>

                    <Grid Grid.Row="2" Grid.Column="1">
                        <ContentControl Content="{Binding}">
                            <ContentControl.Style>
                                <Style TargetType="{x:Type ContentControl}">
                                    <Setter Property="ContentTemplate" Value="{StaticResource SubjectViewerTemplate}" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CurrentView}" Value="1">
                                            <Setter Property="ContentTemplate" Value="{StaticResource ClassificationSummaryTemplate}" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ContentControl.Style>
                        </ContentControl>
                    </Grid>

                    <Grid Grid.Row="3" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10*"/>
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="12*"/>
                        </Grid.RowDefinitions>

                        <Button x:Name="SubmitButton" Command="{Binding ContinueClassification}" Style="{StaticResource SuccessBtn}" Foreground="Black">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontFamily="/GalaxyZooTouchTable;component/Fonts/#Karla"
                                    FontWeight="Bold"
                                    VerticalAlignment="Center"
                                    FontSize="{Binding Path=ActualHeight, ElementName=SubmitButton, Converter={StaticResource PercentSizeConverter}, ConverterParameter='0.4'}"
                                    Text="{Binding SuccessBtnText}"/>
                                <fa:ImageAwesome
                                    Icon="ChevronRight"
                                    Style="{StaticResource ContinueChevron}"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Height="{Binding Path=ActualHeight, ElementName=SubmitButton, Converter={StaticResource PercentSizeConverter}, ConverterParameter='0.4'}"
                                    Margin="5,0"/>
                            </StackPanel>
                        </Button>

                        <Grid Grid.Row="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="4*"/>
                                <RowDefinition Height="3*"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="45*"/>
                                <ColumnDefinition Width="220*"/>
                                <ColumnDefinition Width="30*"/>
                                <ColumnDefinition Width="60*"/>
                                <ColumnDefinition Width="20*"/>
                            </Grid.ColumnDefinitions>

                            <Image Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Source="../Images/General/qrcode.png"/>
                            <Image Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" Source="../Images/General/Logo.png" HorizontalAlignment="Left"/>
                                <Viewbox Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2" VerticalAlignment="Top">
                                    <TextBlock Text="adler.zooniverse.org" Foreground="White"/>
                                </Viewbox>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
        <Grid Grid.Column="2" Panel.ZIndex="-1">
            <Grid.RowDefinitions>
                <RowDefinition Height="119*"/>
                <RowDefinition Height="218*"/>
                <RowDefinition Height="52*"/>
            </Grid.RowDefinitions>

            <local:ExamplesPanel Grid.Row="1" DataContext="{Binding ExamplesViewModel}"/>
        </Grid>
    </Grid>
</UserControl>
