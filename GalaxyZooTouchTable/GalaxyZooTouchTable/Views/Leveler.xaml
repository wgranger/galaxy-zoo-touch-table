<UserControl x:Class="GalaxyZooTouchTable.Views.Leveler"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="265" d:DesignWidth="345">
    <Border Background="#55565A" CornerRadius="10,0,0,10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="12*"/>
            </Grid.ColumnDefinitions>

            <Border Background="Black" CornerRadius="10" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <Border Background="Purple" CornerRadius="3" Grid.Row="0" Margin="5,5,5,2.5" Opacity="0.5"/>
                    <Border Background="Purple" CornerRadius="3" Grid.Row="1" Margin="5,2.5" Opacity="0.5"/>
                    <Border Background="Purple" CornerRadius="3" Grid.Row="2" Margin="5,2.5" Opacity="0.5"/>
                    <Border Background="Purple" CornerRadius="3" Grid.Row="3" Margin="5,2.5" Opacity="0.5"/>
                    <Border Background="Purple" CornerRadius="3" Grid.Row="4" Margin="5,2.5,5,5"/>
                </Grid>
            </Border>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="65*"/>
                    <RowDefinition Height="25*"/>
                    <RowDefinition Height="45*"/>
                    <RowDefinition Height="15*"/>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="60*"/>
                </Grid.RowDefinitions>

                <fa:ImageAwesome Margin="15" Icon="ChevronRight" HorizontalAlignment="Right" Foreground="White"/>
                
                <Viewbox Grid.Row="1" HorizontalAlignment="Left">
                    <TextBlock Text="CURRENT RANK" Foreground="White" FontFamily="/GalaxyZooTouchTable;component/Fonts/#Karla"/>
                </Viewbox>

                <Viewbox Grid.Row="2" HorizontalAlignment="Left">
                    <TextBlock Text="Level One" Foreground="White" FontFamily="/GalaxyZooTouchTable;component/Fonts/#Karla" FontWeight="Bold"/>
                </Viewbox>

                <Viewbox Grid.Row="4" HorizontalAlignment="Left">
                    <TextBlock Foreground="White" FontFamily="/GalaxyZooTouchTable;component/Fonts/#Karla">
                        <Run Text="Classify"/>
                        <Run Text="5" FontWeight="Bold"/>
                        <Run Text="More"/>
                    </TextBlock>
                </Viewbox>

                <Viewbox Grid.Row="5" HorizontalAlignment="Left">
                    <TextBlock Text="galaxies to level up!" Foreground="White" FontFamily="/GalaxyZooTouchTable;component/Fonts/#Karla"/>
                </Viewbox>
            </Grid>
        </Grid>
    </Border>
</UserControl>
