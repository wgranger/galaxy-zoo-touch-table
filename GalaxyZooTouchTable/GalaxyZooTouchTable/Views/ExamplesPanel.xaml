    <Grid>
        <Border x:Name="Panel" Style="{StaticResource MainPanelStyle}" Background="#55565A" CornerRadius="0,5,5,0">
            <Border.RenderTransform>
                <TranslateTransform X="{Binding Path=ActualWidth, ElementName=Panel, Converter={StaticResource HidePanelConverter}, ConverterParameter='-0.8'}"/>
            </Border.RenderTransform>

            <Grid Margin="0,10,0,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="7*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="18*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>

                <fa:ImageAwesome
                        x:Name="RightArrow"
                        Icon="ChevronRight"
                        Grid.Column="2"
                        Margin="8"
                        Foreground="White"
                        Panel.ZIndex="1"
                        RenderTransformOrigin="0.5,0.5"
                        Style="{StaticResource RightArrowStyle}">
                    <fa:ImageAwesome.RenderTransform>
                        <RotateTransform/>
                    </fa:ImageAwesome.RenderTransform>

                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="TouchDown">
                            <i:InvokeCommandAction Command="{Binding TogglePanel}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </fa:ImageAwesome>

                <Border Grid.Column="2" Grid.RowSpan="2" Background="#55565A">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="TouchDown">
                            <i:InvokeCommandAction Command="{Binding OpenPanel}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Border>

                <Grid Grid.Column="1" RenderTransformOrigin="0,1" Style="{StaticResource HeaderGrid}">
                    <Grid.RenderTransform>
                        <TransformGroup>
                            <RotateTransform x:Name="RotateHeader" Angle="90"/>
                            <TranslateTransform x:Name="TranslateHeader" X="{Binding Path=ActualWidth, ElementName=Panel, Converter={StaticResource HidePanelConverter}, ConverterParameter='0.66'}"/>
                        </TransformGroup>
                    </Grid.RenderTransform>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <Viewbox HorizontalAlignment="Left">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="TouchDown">
                                <i:InvokeCommandAction Command="{Binding TogglePanel}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <TextBlock Text="Examples" Foreground="White" FontFamily="/GalaxyZooTouchTable;component/Fonts/#Karla" FontWeight="Bold"/>
                    </Viewbox>

                    <Viewbox Grid.Row="1" Margin="0,0,10,0">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="TouchDown">
                                <i:InvokeCommandAction Command="{Binding TogglePanel}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <TextBlock Text="Tap each item to learn more." Foreground="White" FontFamily="/GalaxyZooTouchTable;component/Fonts/#Karla" FontStyle="Italic"/>
                    </Viewbox>
                </Grid>

                <Grid x:Name="ExampleGrid" Grid.Column="1" Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Style="{StaticResource TestThis}" Height="1*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>

                    <Border Style="{StaticResource SmoothExampleBorder}" BorderThickness="0 1 0 0" BorderBrush="Black">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="TouchDown">
                                <i:InvokeCommandAction Command="{Binding SelectItem}" CommandParameter="{Binding Smooth}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>

                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="4*"/>
                            </Grid.RowDefinitions>

                            <DockPanel Grid.ColumnSpan="3">
                                <Viewbox>
                                    <TextBlock Foreground="White" Text="{Binding Smooth.Title}" VerticalAlignment="Center" FontFamily="/GalaxyZooTouchTable;component/Fonts/#Karla" FontWeight="Bold"/>
                                </Viewbox>
                                <fa:ImageAwesome RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" Icon="ChevronRight" Foreground="White">
                                    <fa:ImageAwesome.RenderTransform>
                                        <RotateTransform />
                                    </fa:ImageAwesome.RenderTransform>
                                </fa:ImageAwesome>
                            </DockPanel>

                            <Image Grid.Column="0" Grid.Row="1" Source="{Binding Smooth.ImageOne}" Margin="2"/>
                            <Image Grid.Column="1" Grid.Row="1" Source="{Binding Smooth.ImageTwo}" Margin="2"/>
                            <Image Grid.Column="2" Grid.Row="1" Source="{Binding Smooth.ImageThree}" Margin="2"/>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource FeaturesExampleBorder}" BorderThickness="0 1 0 0" BorderBrush="Black">
                        <Border.RenderTransform>
                            <TranslateTransform Y="{Binding Path=ActualHeight, ElementName=ExampleGrid, Converter={StaticResource HidePanelConverter}, ConverterParameter='0.33'}"/>
                        </Border.RenderTransform>
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="TouchDown">
                                <i:InvokeCommandAction Command="{Binding SelectItem}" CommandParameter="{Binding Features}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>

                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="4*"/>
                            </Grid.RowDefinitions>

                            <DockPanel Grid.ColumnSpan="3">
                                <Viewbox>
                                    <TextBlock Foreground="White" Text="{Binding Features.Title}" VerticalAlignment="Center" FontFamily="/GalaxyZooTouchTable;component/Fonts/#Karla" FontWeight="Bold"/>
                                </Viewbox>
                                <fa:ImageAwesome RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" Icon="ChevronRight" Foreground="White">
                                    <fa:ImageAwesome.RenderTransform>
                                        <RotateTransform />
                                    </fa:ImageAwesome.RenderTransform>
                                </fa:ImageAwesome>
                            </DockPanel>

                            <Image Grid.Column="0" Grid.Row="1" Source="{Binding Features.ImageOne}" Margin="2"/>
                            <Image Grid.Column="1" Grid.Row="1" Source="{Binding Features.ImageTwo}" Margin="2"/>
                            <Image Grid.Column="2" Grid.Row="1" Source="{Binding Features.ImageThree}" Margin="2"/>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource StarExampleBorder}" BorderThickness="0 1 0 0" BorderBrush="Black">
                        <Border.RenderTransform>
                            <TranslateTransform Y="{Binding Path=ActualHeight, ElementName=ExampleGrid, Converter={StaticResource HidePanelConverter}, ConverterParameter='0.66'}"/>
                        </Border.RenderTransform>
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="TouchDown">
                                <i:InvokeCommandAction Command="{Binding SelectItem}" CommandParameter="{Binding NotAGalaxy}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>

                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="4*"/>
                            </Grid.RowDefinitions>

                            <DockPanel Grid.ColumnSpan="3">
                                <Viewbox>
                                    <TextBlock Foreground="White" Text="{Binding NotAGalaxy.Title}" VerticalAlignment="Center" FontFamily="/GalaxyZooTouchTable;component/Fonts/#Karla" FontWeight="Bold"/>
                                </Viewbox>
                                <fa:ImageAwesome x:Name="ExampleArrow" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" Icon="ChevronRight" Foreground="White">
                                    <fa:ImageAwesome.RenderTransform>
                                        <RotateTransform />
                                    </fa:ImageAwesome.RenderTransform>
                                </fa:ImageAwesome>
                            </DockPanel>

                            <Image Grid.Column="0" Grid.Row="1" Source="{Binding NotAGalaxy.ImageOne}" Margin="2"/>
                            <Image Grid.Column="1" Grid.Row="1" Source="{Binding NotAGalaxy.ImageTwo}" Margin="2"/>
                            <Image Grid.Column="2" Grid.Row="1" Source="{Binding NotAGalaxy.ImageThree}" Margin="2"/>
                        </Grid>
                    </Border>

                    <ScrollViewer x:Name="ItemText" Style="{StaticResource SelectedItemText}" Grid.Row="1" PanningMode="VerticalOnly" VerticalScrollBarVisibility="Hidden">
                        <StackPanel Style="{StaticResource SelectedTextStackPanel}">
                            <StackPanel.RenderTransform>
                                <TranslateTransform X="{Binding Path=ActualWidth, ElementName=ItemText, Converter={StaticResource HidePanelConverter}, ConverterParameter='-1'}"/>
                            </StackPanel.RenderTransform>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,10" Text="{Binding SelectedExample.Description}" Foreground="White" FontFamily="/GalaxyZooTouchTable;component/Fonts/#Karla"/>
                            <TextBlock TextWrapping="Wrap" Text="{Binding SelectedExample.Description2}" Foreground="White" FontFamily="/GalaxyZooTouchTable;component/Fonts/#Karla"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
                
                

