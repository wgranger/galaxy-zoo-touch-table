<Window x:Class="GalaxyZooTouchTable.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GalaxyZooTouchTable"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowState="Maximized"
        x:Name="Root"
        Stylus.IsPressAndHoldEnabled="False"
        Title="MainWindow" d:DesignWidth="1920" d:DesignHeight="1080">

    <Window.Resources>
        <Style x:Key="Centerpiece" TargetType="{x:Type local:Centerpiece}">
            <Setter Property="Panel.ZIndex" Value="1"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=Dormant}" Value ="False">
                    <Setter Property="Panel.ZIndex" Value="0"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="Background" TargetType="{x:Type Grid}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=Dormant}" Value="False">
                    <Setter Property="OpacityMask">
                        <Setter.Value>
                            <DrawingBrush>
                                <DrawingBrush.Drawing>
                                    <GeometryDrawing>
                                        <GeometryDrawing.Brush>
                                            <RadialGradientBrush>
                                                <RadialGradientBrush.GradientStops>
                                                    <GradientStop Color="Transparent"/>
                                                </RadialGradientBrush.GradientStops>
                                            </RadialGradientBrush>
                                        </GeometryDrawing.Brush>
                                        <GeometryDrawing.Geometry>
                                            <RectangleGeometry Rect="0,0 0.475,0.235" />
                                        </GeometryDrawing.Geometry>
                                        <GeometryDrawing.Pen>
                                            <Pen Thickness="0.1" Brush="Black" />
                                        </GeometryDrawing.Pen>
                                    </GeometryDrawing>
                                </DrawingBrush.Drawing>
                            </DrawingBrush>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Viewbox HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <local:DragCanvas x:Name="RootCanvas" Background="Black" Width="1920" Height="1080">

            <local:Centerpiece Style="{StaticResource Centerpiece}" x:Name="Centerpiece" Canvas.Left="333" Canvas.Top="325"/>
            
            <Grid Width="1920" Height="1080" IsHitTestVisible="False" Style="{StaticResource Background}">
                <Image Stretch="UniformToFill" Source="../Images/General/background.jpg"/>
            </Grid>

            <Image Margin="40" Height="52" Width="124" Source="../Images/General/logo-badge.png">
                <Image.LayoutTransform>
                    <RotateTransform Angle="180"/>
                </Image.LayoutTransform>
            </Image>
            <Image Canvas.Right="40" Canvas.Bottom="40" HorizontalAlignment="Right" Height="52" Width="124" Source="../Images/General/logo-badge.png"/>

            <local:UserConsole
                x:Name="PersonUser"
                DataContext="{Binding PersonUserVM}"
                Style="{StaticResource PersonUser}"
                Canvas.Left="333"
                Canvas.Bottom="10"/>

            <local:UserConsole
                x:Name="FaceUser"
                DataContext="{Binding FaceUserVM}"
                Style="{StaticResource FaceUser}"
                Canvas.Left="1059"
                Canvas.Bottom="10"/>

            <local:UserConsole
                x:Name="HeartUser"
                DataContext="{Binding HeartUserVM}"
                Style="{StaticResource HeartUser}"
                Canvas.Left="313"
                Canvas.Top="10">
                <local:UserConsole.RenderTransform>
                    <RotateTransform Angle="180"/>
                </local:UserConsole.RenderTransform>
            </local:UserConsole>

            <local:UserConsole
                x:Name="StarUser"
                DataContext="{Binding StarUserVM}"
                Style="{StaticResource StarUser}"
                Canvas.Left="1039"
                Canvas.Top="10">
                <local:UserConsole.RenderTransform>
                    <RotateTransform Angle="180"/>
                </local:UserConsole.RenderTransform>
            </local:UserConsole>

            <local:UserConsole
                x:Name="EarthUser"
                DataContext="{Binding EarthUserVM}"
                Style="{StaticResource EarthUser}"
                Canvas.Left="10"
                Canvas.Top="266">
                <local:UserConsole.LayoutTransform>
                    <RotateTransform Angle="90"/>
                </local:UserConsole.LayoutTransform>
            </local:UserConsole>

            <local:UserConsole
                x:Name="LightUser"
                DataContext="{Binding LightUserVM}"
                Style="{StaticResource LightUser}"
                Canvas.Right="10"
                Canvas.Top="266">
                <local:UserConsole.LayoutTransform>
                    <RotateTransform Angle="-90"/>
                </local:UserConsole.LayoutTransform>
            </local:UserConsole>
        </local:DragCanvas>
    </Viewbox>
</Window>
