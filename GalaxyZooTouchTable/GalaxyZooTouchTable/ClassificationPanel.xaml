<UserControl x:Class="GalaxyZooTouchTable.ClassificationPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GalaxyZooTouchTable"
             mc:Ignorable="d" 
             Width="550" Height="350">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border
            Grid.Column="1"
            CornerRadius="5"
            BorderBrush="#343438"
            BorderThickness="1"
            Height="311"
            Width="300"
            Padding="0">
            <Canvas Background="#343438">
                <Image Source="{Binding Avatar}" Height="50" Width="50" Canvas.Left="120" Canvas.Top="-25"/>
                <Button BorderThickness="0" Name="CloseButton" HorizontalAlignment="Left" Height="30"  Foreground="White" Background="Transparent" Margin="200,5,0,0" VerticalAlignment="Top" Width="75" TouchUp="CloseButton_TouchUp">
                    <WrapPanel>
                        <TextBlock Text="Close Workspace" FontFamily="/GalaxyZooTouchTable;component/Fonts/#Karla" Margin="0,2,2,0" FontSize="8"/>
                        <TextBlock Text="X" FontFamily="/GalaxyZooTouchTable;component/Fonts/#Karla" FontSize="12"/>
                    </WrapPanel>
                </Button>
                <Line X1="10" X2="290" Y1="40" Y2="40" Stroke="#404040" StrokeDashCap="Round" StrokeThickness="2"/>
                <Label Content="Classify galaxies to help astronomers!" Foreground="White" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="6" Canvas.Top="45" FontFamily="/GalaxyZooTouchTable;component/Fonts/#Karla"/>
                <Rectangle Height="100" Width="100" Fill="Gray" Canvas.Top="78" Canvas.Left="13"/>
                <StackPanel Canvas.Left="125" Canvas.Top="80">
                    <TextBlock Foreground="White" Text="What type of galaxy is this?" FontFamily="/GalaxyZooTouchTable;component/Fonts/#Karla" FontSize="10"/>
                    <TextBlock Foreground="White" Text="Check the More Info tab on the right for help." FontFamily="/GalaxyZooTouchTable;component/Fonts/#Karla" FontSize="8"/>
                    <Button Width="150" Height="22" HorizontalAlignment="Left" Margin="0,2,0,2" Background="#55565A"></Button>
                    <Button Width="150" Height="22" HorizontalAlignment="Left" Margin="0,2,0,2" Background="#55565A"></Button>
                    <Button Width="150" Height="22" HorizontalAlignment="Left" Margin="0,2,0,2" Background="#55565A"></Button>
                </StackPanel>
                <TextBlock Text="Not sure? That's ok! Here are a few additional resources to help your research." Foreground="White" FontFamily="/GalaxyZooTouchTable;component/Fonts/#Karla" FontSize="8" Canvas.Top="187" Canvas.Left="9" />
                <WrapPanel Canvas.Top="210" Canvas.Left="10">
                    <Button Height="18" Background="Transparent" Foreground="White" Width="125" Margin="10,0,0,0" FontSize="10" FontFamily="/GalaxyZooTouchTable;component/Fonts/#Karla">Ask a friend</Button>
                    <Button Height="18" Background="Transparent" Foreground="White" Width="125" Margin="10,0,10,0" FontSize="10" FontFamily="/GalaxyZooTouchTable;component/Fonts/#Karla">See what others said</Button>
                </WrapPanel>
                <Button Canvas.Left="10" Canvas.Top="233" Width="280" Height="25" Background="#63AB51" Foreground="White" FontFamily="/GalaxyZooTouchTable;component/Fonts/#Karla" FontSize="8">
                    Submit classification
                </Button>
            </Canvas>
        </Border>
    </Grid>
</UserControl>
