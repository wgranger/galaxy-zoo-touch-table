<UserControl x:Class="GalaxyZooTouchTable.UserConsole"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GalaxyZooTouchTable"
             d:DesignHeight="366"
             d:DesignWidth="551"
             Height="{Binding Source={x:Static SystemParameters.PrimaryScreenHeight}, Converter={StaticResource UserConsoleConverter}, ConverterParameter='0.363'}"
             Width="{Binding Source={x:Static SystemParameters.PrimaryScreenHeight}, Converter={StaticResource UserConsoleConverter}, ConverterParameter='0.516'}"
             mc:Ignorable="d">

    <Grid x:Name="ControlPanel">
        <local:StartButton x:Name="StartButton" TouchUp="StartButton_TouchUp" VerticalAlignment="Bottom"/>
    </Grid>
</UserControl>
