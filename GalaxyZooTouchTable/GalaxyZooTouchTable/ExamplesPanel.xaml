<UserControl x:Class="GalaxyZooTouchTable.ExamplesPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GalaxyZooTouchTable"
             xmlns:fa="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
             Background="Transparent"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="300">

    <UserControl.Resources>
        <Storyboard x:Key="SlideRight">
            <DoubleAnimation
                Storyboard.TargetName="Panel"
                Storyboard.TargetProperty="(Panel.RenderTransform).(TranslateTransform.X)"
                To="0" Duration="0:0:0.2"/>
        </Storyboard>

        <Storyboard x:Key="SlideLeft">
            <DoubleAnimation
                Storyboard.TargetName="Panel"
                Storyboard.TargetProperty="(Panel.RenderTransform).(TranslateTransform.X)"
                To="{Binding Path=ActualWidth, Source={x:Reference Panel}, Converter={StaticResource HidePanelConverter}, ConverterParameter='-0.8'}" Duration="0:0:0.2"/>
        </Storyboard>
    </UserControl.Resources>

    <Grid>
        <TextBlock Text="Examples"/>

        <Border x:Name="Panel" Background="Gray" CornerRadius="0,10,10,0">
            <Border.RenderTransform>
                <TranslateTransform X="{Binding Path=ActualWidth, ElementName=Panel, Converter={StaticResource HidePanelConverter}, ConverterParameter='-0.8'}"/>
            </Border.RenderTransform>

            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="5*"/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <fa:ImageAwesome x:Name="RightArrow" Icon="ChevronRight" Margin="5" HorizontalAlignment="Right" Foreground="White" TouchDown="Grid_TouchDown"/>
                </Grid>

                <Border x:Name="SelectedElement"
                    Grid.Row="1"
                    BorderBrush="White"
                    IsHitTestVisible="False"
                    BorderThickness="5"
                    VerticalAlignment="Top"
                    Width="111"
                    Height="100">
                    <TextBlock Text="Target"/>
                </Border>

                <StackPanel TouchDown="UIElement_TouchDown" Grid.Row="1">
                    <Rectangle Fill="Blue" Width="100" Height="100"/>
                    <Rectangle Fill="Red" Width="100" Height="100"/>
                    <Rectangle x:Name="Box" Width="100" Height="100" Fill="Yellow"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>


</UserControl>
